# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG_MODE=true
APP_NAME=Shena Companion Welfare Association
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_NAME=shena_welfare_db
DB_USER=root
DB_PASS=your_database_password

# M-Pesa Configuration
# Get your credentials from Safaricom Daraja API
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=http://yourdomain.com/api/mpesa/callback

# Email Configuration (SMTP)
# For Gmail: Enable "Less secure app access" or use App Password
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# HostPinnacle SMS Configuration
# Get your credentials from https://www.hostpinnacle.co.ke
# Contact: support@hostpinnacle.co.ke or +254 709 943 000
HOSTPINNACLE_USER_ID=your_user_id
HOSTPINNACLE_API_KEY=your_api_key
HOSTPINNACLE_SENDER_ID=SHENA

# Security Settings
# Generate random strings for production: Use bin2hex(random_bytes(32))
ENCRYPTION_KEY=generate_random_32_char_string
JWT_SECRET=generate_random_64_char_string

# Admin Contact
ADMIN_EMAIL=info@shenacompanion.org
ADMIN_PHONE=+254712345678
